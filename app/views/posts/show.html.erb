<h2><%= link_to @post.name, @post %></h2> 
<p>written by: <%= @post.user.name %></p>

<% if @post.user == current_user %>
	<%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<h4>Content:</h4>
<%= @post.content %>



<h4>Comments:</h4>

<% @post.comments.each do |comment| %>
	<li class="list-group-item list-inline">
		<h5><%= comment.name %></h5>
		<p><%= comment.content %></p>
		<p><%= comment.created_at.to_formatted_s(:long) %></p>
		<p><%= current_user.name%></p>
	</li>
<% end %>



<ul class="list-group">
	<li class="list-group-item list-inline">
		<h5>Post a comment: </h5>
		<%= form_for [@post, @comment] do |f|%>
			<%= f.hidden_field :post_id, value: @post.id %>
			<%= f.hidden_field :user_id, value: current_user.id %>
			<%= f.label :name, "Title" %><br>
			<%= f.text_field :name %><br>
			<%= f.label :content, "Comment" %><br>
			<%= f.text_area :content %><br>
			<%= f.submit %>
		<% end %>
	</li>
</ul>

